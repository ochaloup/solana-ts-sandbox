  "author": "chalda",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint-plugin-jest": "28.13.3",
    "eslint": "^9.10.0",
    "@marinade.finance/ts-common": "3.3.0",
    "@solana/web3.js": "^1.98.2",
    "@solana/spl-token": "^0.4.13",
    "bn.js": "^5.2.1",
    "jest": "^30.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {},
  "engines": {
    "node": ">=20.0.0"
