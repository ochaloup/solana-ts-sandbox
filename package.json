{
  "name": "solana-ts-sandbox",
  "version": "1.0.0",
  "description": "A Solana TypeScript sandbox project",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
